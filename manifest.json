{
  "manifest_version": 3,
  "name": "SEI Smart",
  "description": "Assistente inteligente para gerar respostas profissionais em despachos do SEI com IA.",
  "version": "1.1.0",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://api.openai.com/*",
    "*://*/sei/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/sei/*"],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["*://*/sei/*"],
      "js": ["content-script-sei-tools.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sei-extension-features.js",
        "sei-pro-arvore.js",
        "lib/dropzone.min.js",
        "credits.html",
        "popup.css",
        "credits-template.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SEI Smart - Gerar despacho com IA"
  },
  "options_page": "options.html"
}
